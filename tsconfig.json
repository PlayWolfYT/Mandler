{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        //"rootDir": "./src",
    },
    "include": [
        "src",
        "./package.json",
        "./README.md"
    ],
    "exclude": [
        "**/__tests__/*",
        "node_modules"
    ]
}